@using Stemauto.Entities
@using Stemauto.Extentions
@model Stemauto.ViewModels.Services.MyServicesVM
@{
	//css файла -> wwwroot
	//използва css файла от папка shared 
	this.Layout = "/Views/Shared/Shared.cshtml";
	//title на html файла е home
	ViewData["title"] = "My services";
}


<div class="grid">
	<div class="row">
		<div class="col-2">
			Title
		</div>

		<div class="col-2">
			Description
		</div>

		<div class="col-2">
			Price
		</div>

		<div class="col-2">
			Photo
		</div>
		
	</div>
	@foreach(Service item in Model.Services)
	{
		<div class="row">
			<div class="col-2">@item.Title</div>
			<div class="col-2">@item.Description</div>
			<div class="col-2">@item.Price</div>
			<div class="col-2"><img src="../Resourses/ServicesPhotos/@item.Img" style="width: 40px; height: 40px " ></div>

			<div class="col-3">
				
				<a href="/Services/Edit?Id=@item.Id">edit</a> 
				<a href="/Services/Delete?Id=@item.Id">delete</a> 
				
			</div>
		</div>
	}
</div>

