@using Stemauto.Entities
@using Stemauto.Extentions
@model Stemauto.ViewModels.Sale.MyCarsVM
@{
	//css файла -> wwwroot
	//използва css файла от папка shared 
	this.Layout = "/Views/Shared/Shared.cshtml";
	//title на html файла е home
	ViewData["title"] = "My cars";
}


<div class="grid">
	<div class="row">
		<div class="col-2">
			Brand
		</div>

		<div class="col-2">
			Description
		</div>

		<div class="col-2">
			Price
		</div>

		<div class="col-2">
			HP
		</div>

		<div class="col-2">
			Photo
		</div>
		
	</div>
	@foreach(Car item in Model.Cars)
	{
		<div class="row">
			<div class="col-2">@item.Brand</div>
			<div class="col-2">@item.Description</div>
			<div class="col-2">@item.Price</div>
			<div class="col-2">@item.HorsePower</div>
			<div class="col-2"><img src="../Resourses/CarsPhotos/@item.Img" style="width: 40px; height: 40px " ></div>

			<div class="col-3">
				
				<a href="/Sale/Edit?Id=@item.Id">edit</a> 
				<a href="/Sale/Delete?Id=@item.Id">delete</a> 
				
			</div>
		</div>
	}
</div>

